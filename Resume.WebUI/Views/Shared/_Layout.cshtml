@using System.ComponentModel
<html lang="en">
<head>
    <partial name="_UserMetaTags" />

    <title>پنل کاربر | @ViewData["Title"]</title>
    <partial name="_UserHeader" />
    @await RenderSectionAsync(name: "Style",required:false)

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <partial name="_NavbarUser" />
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="index3.html" class="brand-link">
                <img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">پنل مدیریت</span>
            </a>
            <partial name="_SidebarUser" />
        </aside>

        <div class="content-wrapper">
            @await Component.InvokeAsync(name: "Header");
            <div class="content">
                @RenderBody();
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>

    </div>

    <partial name="_UserFooter" />
    @await RenderSectionAsync(name: "Scripts", required: false)
</body>
</html>
